rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper to check if user is admin (requires Firestore lookup which isn't directly supported in Storage rules easily without Custom Claims, 
    // so for simplicity we often rely on path ownership or assume admin has a specific claim.
    // robust admin check in storage usually needs custom auth claims. 
    // For this demo, we'll focus on Owner Write/Read and maybe Public Read for some.)

    // Verification Documents: /verification/{userId}/{filename}
    match /verification/{userId}/{allPaths=**} {
      // Owner can upload/read their own docs
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Product Images: /products/{allPaths=**}
    match /products/{allPaths=**} {
      // Public read
      allow read: if true;
      // Authenticated sellers can upload (simplified, ideally verifying role)
      allow write: if request.auth != null;
    }
  }
}
