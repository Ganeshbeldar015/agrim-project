rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      // Admin can read/write everything
      // Owner can read their own profile
      // Owner can write to their profile (e.g. for registration updates)
      allow read: if isAdmin() || isOwner(userId);
      allow write: if isAdmin() || isOwner(userId);
    }

    // Products (Assuming a 'products' collection exists for Sellers)
    match /products/{productId} {
      // Anyone can read products
      allow read: if true;
      // Only approved sellers or admins can create/update
      allow create, update, delete: if isAdmin() || (request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'seller' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'approved');
    }

    // Add other collections as needed...
  }
}
